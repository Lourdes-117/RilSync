<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:id="@+id/mainacti_frame"
    tools:context="com.example.lourdesdinesh.rilsync.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/atm_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="ATM Login" />

        <Button
            android:id="@+id/net_banking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/atm_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Net Banking" />

        <Button
            android:id="@+id/open_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Guide Me to nearest ATM" />

    </LinearLayout>

</FrameLayout>
