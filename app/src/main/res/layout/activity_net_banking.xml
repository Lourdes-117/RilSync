<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lourdesdinesh.rilsync.NetBanking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/nb_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/nb_union"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="Canara Bank" />

            <Button
                android:id="@+id/nb_axis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nb_kotak"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Axis Bank" />

            <Button
                android:id="@+id/nb_kotak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nb_iob"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Kotak Mahindra bank" />

            <Button
                android:id="@+id/nb_iob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nb_union"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Indian Overseas Bank" />

            <Button
                android:id="@+id/nb_union"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Union Bank Of India" />

            <Button
                android:id="@+id/nb_hsbc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="HSBC" />

            <Button
                android:id="@+id/nb_sbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="State Bank Of India" />

            <Button
                android:id="@+id/nb_iib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="IndusInd Bank" />

        </LinearLayout>
    </ScrollView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</RelativeLayout>
